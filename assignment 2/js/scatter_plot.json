{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 550,
  "title": "Energy usage",
  "data": {
    "url": "https://raw.githubusercontent.com/ChongJiunnKang/3179/master/assignment%202/data/energy.csv"
  },
  "params": [
    {
      "name": "Year_selection",
      "value": 2016,
      "bind": {
        "input": "range",
        "min": 1990,
        "max": 2019,
        "step": 1,
        "name": "Year:  "
      }
    },
    {
      "name": "Population_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 1400000,
        "step": 100,
        "name": "Minimum Population: "
      }
    },
    {
      "name": "Energy_type_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "all_energy_types",
          "coal",
          "natural_gas",
          "petroleum_n_other_liquids",
          "nuclear",
          "renewables_n_other"
        ],
        "labels": [
          "Show All",
          "all energy types",
          "coal",
          "natural gas",
          "petroleum and other liquids",
          "nuclear",
          "renewables and other"
        ],
        "name": "Energy Type Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Energy_consumption > 0"},
    {"filter": "datum.Energy_production > 0"},
    {"filter": "datum.Population > Population_Above"},
    {"filter": "datum.Year == Year_selection"},
    {"filter": "datum['Country'] != 'World'"},
    {
      "filter": "Energy_type_selection == null || datum.Energy_type == Energy_type_selection"
    },
    {"calculate": "datum.Energy_consumption", "as": "Energy consumption"},
    {"calculate": "datum.Energy_production", "as": "Energy production"}

  ],
  "encoding": {
    "x": {
      "field": "Energy consumption",
      "type": "quantitative",
      "axis": {"tickCount": 5},
      "scale": {"type": "log"}
    },
    "y": {
      "field": "Energy production",
      "type": "quantitative",
      "axis": {"tickCount": 5},
      "scale": {"type": "log"}
    }
  },
  "layer": [
    {
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [10000, 50000, 100000, 1000000],
            "range": [50, 100, 300, 400,900]
          },
          "legend": {"format": ".1s"}
        },
        "color": {
          "field": "Energy_type",
          "title": "Energy Type",
          "type": "nominal",
          "scale": {
            "domain": [
            "all_energy_types",
            "coal",
            "natural_gas",
            "petroleum_n_other_liquids",
            "nuclear",
            "renewables_n_other"
            ],
            "range": [
              "#e41a1c",
              "#984ea3",
              "orange",
              "black",
              "blue",
              "#a65628"
            ]
          },"legend": {"labelExpr": "{'all_energy_types': 'all energy types', 'natural_gas': 'natural gas', 'coal': 'coal','nuclear': 'nuclear','petroleum_n_other_liquids': 'petroleum and other liquids', 'renewables_n_other': 'renewables and other'}[datum.label]"}
        },
        "opacity": {"value": 0.4},
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Energy_type", "type": "nominal"},
          {"field": "Energy consumption", "type": "quantitative", "format": ","},
          {"field": "Energy production", "type": "quantitative", "format": ","}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'Australia' || datum['Country'] == 'China'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Energy_type", "type": "nominal"},
          {"field": "Energy consumption", "type": "quantitative", "format": ","},
          {"field": "Energy production", "type": "quantitative", "format": ","}
        ]
      }
    }
  ]
}
