{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "title": "COVID-19 Cases per Country (13 Oct 2020)",
  "data": {
    "url": "https://raw.githubusercontent.com/ChongJiunnKang/3179/master/assignment%202/data/energy.csv"
  },
  "params": [
    {
      "name": "Population_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 1400000,
        "step": 100,
        "name": "Minimum Population: "
      }
    },
    {
      "name": "Energy_type_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "coal",
          "natural_gas",
          "petroleum_n_other_liquids",
          "nuclear",
          "renewables_n_other"
        ],
        "labels": [
          "Show All",
          "coal",
          "natural gas",
          "petroleum and other liquids",
          "nuclear",
          "renewables and other"
        ],
        "name": "Energy Type Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Energy_consumption > 0"},
    {"filter": "datum.Energy_production > 0"},
    {"filter": "datum.Population > Population_Above"},
    {"filter": "datum.Year == 2019"},
    {"filter": "datum['Energy_type'] != 'all_energy_type'"},
    {"filter": "datum['Country'] != 'World'"},
    {
      "filter": "Energy_type_selection == null || datum.Energy_type == Energy_type_selection"
    },
    {
      "calculate": "datum.Energy_consumption/datum.Population* 1000",
      "as": "Energy_consumption per capital"
    },{
      "calculate": "datum.Energy_production/datum.Population * 1000",
      "as": "Energy_production per capital"
    }

  ],
  "encoding": {
    "x": {
      "field": "Energy_consumption per capital",
      "type": "quantitative",
      "axis": {"tickCount": 6},
      "scale": {"type": "threshold","domain": [0,0.6]}
    },
    "y": {
      "field": "Energy_production per capital",
      "type": "quantitative",
      "axis": {"tickCount": 3},
      "scale": {"type": "threshold","domain": [0,3]}
    }
  },
  "layer": [
    {
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [10000, 50000, 100000, 1500000,1400000],
            "range": [50, 100, 300, 400, 600, 900]
          },
          "legend": {"format": ".1s"}
        },
        "color": {
          "field": "Energy_type",
          "type": "nominal",
          "scale": {
            "domain": [
              "coal",
              "natural_gas",
              "petroleum_n_other_liquids",
              "nuclear",
              "renewables_n_other"
            ],
            "range": [
              "#e41a1c",
              "#984ea3",
              "#ff7f00",
              "#a6cee3",
              "#377eb8",
              "#a65628"
            ]
          }
        },
        "opacity": {"value": 0.6},
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Energy_type", "type": "nominal"},
          {"field": "Energy_consumption per capital", "type": "quantitative", "format": ","},
          {"field": "Energy_production per capital", "type": "quantitative", "format": ","},
          {
            "field": "Cases per 10,000 Population",
            "type": "quantitative",
            "format": ".2f"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'Australia'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Energy_type", "type": "nominal"},
          {"field": "Energy_consumption per capital", "type": "quantitative", "format": ","},
          {"field": "Energy_production per capital", "type": "quantitative", "format": ","}
        ]
      }
    }
  ]
}
